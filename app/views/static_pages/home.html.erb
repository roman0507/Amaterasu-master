<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3><%= t('.feed_html') %></h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
<div class="span11 center">
  <br>
  <h1><%= t('.welcome_html') %></h1>
  <h2><%= t('.promo_html') %></h2>
  <%= link_to t('.signup_html'), signup_path, class: 'btn btn-large btn-primary button_font' %>
</div>
<%= image_tag('Desktop.png', alt: 'Desktop') %>
<%= image_tag('Notebook.png', alt: 'Notebook', :size => '300x208') %>
<%= image_tag('Tablet.png', alt: 'Tablet', :size => '220x152') %>
<% end %>
