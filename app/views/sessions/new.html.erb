<% provide(:title, t('.login_html')) %>
<h1><%= t('.login_html') %></h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>
      <%= f.label :email, t('.email_html') %>
      <%= f.text_field :email, placeholder: 'user@example.com' %>

      <%= f.label :password, t('.password_html') %>
      <%= f.password_field :password, placeholder: '••••••' %>

      <%= f.label :remember_me, class: 'checkbox' do %>
        <%= f.check_box :remember_me %>
        <span><%= t('.remember_html') %></span>
      <% end %>

      <%= f.submit t('.submit_html'), class: 'btn btn-large btn-block btn-primary button_font' %>
    <% end %>

    <div class="offset2">
      <p><%= link_to t('.forgot_html'), new_password_reset_path %></p>
    </div>

    <p><%= t('.signup1_html') %> <%= link_to t('.signup2_html'), signup_path %></p>
  </div>
</div>
