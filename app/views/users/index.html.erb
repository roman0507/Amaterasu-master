<% provide(:title, t('.title_html')) %>
<h1><%= t('.title_html') %></h1>
<div class="row">
  <div class="span6">
    <%= form_tag users_path, :method => 'get' do %>
      <div style="float: left;">
        <%= search_field_tag :search, params[:search], placeholder: t('.name_html'), size: 30 %>
      </div>
      <div style="float: left;">
        <%= submit_tag t('.search_html'), :name => nil, class: 'btn btn-primary button_font' %>
      </div>
    <% end %>
  </div>
</div>

<ul class="users">
  <%= render @users %>
</ul>

<%= will_paginate %>

<% if @users.blank? %>
  <h4><%= t('.result_html') %></h4>
<% end %>
